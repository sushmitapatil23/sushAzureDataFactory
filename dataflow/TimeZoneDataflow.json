{
	"name": "TimeZoneDataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_timezone",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empId as string,",
				"          empName as string,",
				"          salary as string,",
				"          dep as string,",
				"          lastLonginUTC as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(lastLonginEST = toTimestamp(lastLonginUTC,'yyy-mm-dd HH:MM:SS') - hour(4)) ~> derivedColumn1"
			]
		}
	}
}